<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFEB3B"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/question1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/kaisotai_up_next"
        android:text="休みの日はどう過ごす？"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answer_button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#6AC2EA"
        android:fontFamily="@font/kaisotai_up_next"
        android:text="友達と遊びに行く！"
        android:textSize="16sp"
        app:cornerRadius="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question1_text" />

    <Button
        android:id="@+id/answer_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#6AC2EA"
        android:fontFamily="@font/kaisotai_up_next"
        android:text="家でゆっくり"
        android:textSize="16sp"
        app:cornerRadius="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_button1" />

    <Button
        android:id="@+id/answer_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#6AC2EA"
        android:fontFamily="@font/kaisotai_up_next"
        android:text="一人で行きたいところに行く"
        android:textSize="16sp"
        app:cornerRadius="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_button2" />
</androidx.constraintlayout.widget.ConstraintLayout>